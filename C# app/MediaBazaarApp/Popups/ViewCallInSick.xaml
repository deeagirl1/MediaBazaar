<Window x:Class="MediaBazaarApp.Popups.ViewCallInSick"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaBazaarApp.Popups"
        mc:Ignorable="d"
        Title="View Department" Height="503.933" Width="486.067" ResizeMode="NoResize">
    <Grid Background="#11589b">
        <ListView x:Name="lvDepartments" Height="254" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="14,138,13,0">

            <ListView.View>

                <GridView >
                    <GridViewColumn Header="ID" Width="32" DisplayMemberBinding="{Binding ID}" />
                    <GridViewColumn Header="First Name" Width="138" DisplayMemberBinding="{Binding FirstName}" />
                    <GridViewColumn Header="Last Name" Width="138" DisplayMemberBinding="{Binding LastName}"/>
                    <GridViewColumn Header="Shift" Width="138" DisplayMemberBinding="{Binding LastName}"/>
                </GridView>

            </ListView.View>
        </ListView>
        <Button Content="Done" HorizontalAlignment="Left" Margin="185,418,0,0" VerticalAlignment="Top" Width="100" Height="35" Click="Button_Click"/>

    </Grid>
</Window>
