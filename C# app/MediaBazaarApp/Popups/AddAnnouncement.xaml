<Window x:Class="MediaBazaarApp.Popups.AddAnnouncement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaBazaarApp.Popups"
        mc:Ignorable="d"
        Title="Add new announcement" Height="450" Width="800" ResizeMode="NoResize" >
    <Grid Background="#11589b">
        <TextBox x:Name="tb_Title" HorizontalAlignment="Left" Height="24" Margin="195,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="392"/>
        <TextBox x:Name="tbDescription" HorizontalAlignment="Left" Height="199" Margin="195,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="392"/>
        <Label Content="Title" Foreground="White"  HorizontalAlignment="Left" Margin="195,24,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.25,-0.154" Width="39"/>
        <Label Content="Description" Foreground="White"  HorizontalAlignment="Left" Margin="195,93,0,0" VerticalAlignment="Top" Width="79" RenderTransformOrigin="0.43,0.558"/>
        <Button x:Name="btnAddAnnouncement" Content="Add" HorizontalAlignment="Left" Margin="343,367,0,0" VerticalAlignment="Top" Width="103" Height="31" Click="btnAddAnnouncement_Click"/>

    </Grid>
</Window>
