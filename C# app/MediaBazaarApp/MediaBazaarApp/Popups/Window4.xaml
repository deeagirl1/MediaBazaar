<Window x:Class="MediaBazaarApp.Popups.Window4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaBazaarApp.Popups"
        mc:Ignorable="d"
        Title="Window4"  Height="353" Width="367">
    <Grid Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="5"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="1">
            <Label>Title</Label>
            <TextBox/>
            <Label>Quantity</Label>
            <TextBox/>
            <Label>Observations (optional)</Label>
            <TextBox MinHeight="150"/>
        </StackPanel>
        <Button Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" MaxHeight="25" MaxWidth="100" Content="Add"></Button>
    </Grid>
</Window>