<Window x:Class="MediaBazaarApp.Popups.WorkShiftWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaBazaarApp.Popups"
        mc:Ignorable="d"
        Title="Edit Workshift" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="10,0,10,0">
            <Label Content="All shop workers"/>
            <Label Content="Search"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0"/>
                <Button Grid.Column="1" Content="Search"/>
            </Grid>

        </StackPanel>


        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Margin="10,10,10,10">
                <Button  Content="Assign"/>
                <Button Content="Cancel"/>
            </StackPanel>
        </Grid>


        <StackPanel Margin="10,0,10,0" Grid.Column="2">
            <Label Content="Assigned workshop workers"/>
        </StackPanel>


        <Grid Grid.Column="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label x:Name="dateLabel" Grid.Column="0" VerticalAlignment="Center" HorizontalContentAlignment="Center" Content="Date"/>
            <Label x:Name="timeLabel" Grid.Column="1" VerticalAlignment="Center" HorizontalContentAlignment="Center" Content="Time"/>
        </Grid>


        <ListView x:Name="AllWorkersListView" Grid.Row="1" Grid.Column="0"/>
        <ListView x:Name="AssignedWorkersListView" Grid.Row="1" Grid.Column="2"/>


        <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Content="Done" VerticalAlignment="Top" MaxWidth="100" Margin="0,10,0,0"/>
    </Grid>
</Window>
