<Window x:Class="MediaBazaarApp.Popups.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaBazaarApp.Popups"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="400">
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="250"/>
            <RowDefinition Height="200*"/>
        </Grid.RowDefinitions>
        <Label HorizontalAlignment="Center"  FontSize="25" VerticalAlignment="Center">
            Media Bazaar</Label>
        
            <StackPanel Grid.Row="1" VerticalAlignment="Center" MaxWidth="200">
                <Label>Email</Label>
                <TextBox/>
                <Label>Password</Label>
                <TextBox/>
            </StackPanel>
        
        <Button Grid.Row="2" VerticalAlignment="Top" MaxHeight="25" MaxWidth="100" Content="Login"></Button>
    </Grid>
</Window>
