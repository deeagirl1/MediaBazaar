<Window x:Class="MediaBazaarApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaBazaarApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            
            
            
            <TabItem Header="Employees">
                <Grid Background="LightGray">
                    <TextBox Margin="10,10,244,342">
                        
                    </TextBox>
                    <Button Margin="547,10,122,342">
                        <TextBlock>Search</TextBlock>
                    </Button>
                    <ListView Margin="10,54,122,10">

                    </ListView>
                    <Button Margin="669,347,10,10">
                        <TextBlock>Edit</TextBlock>

                    </Button>
                    <Button Margin="669,269,10,88">
                        <TextBlock>Add</TextBlock>
                    </Button>
                    <Button Margin="669,308,10,49">
                        <TextBlock>Remove</TextBlock>
                    </Button>
                </Grid>
            </TabItem>
            
            
            
            <TabItem Header="Stock" >
                <Grid Background="LightGray">
                    <ListView Margin="10,10,122,10">
                        </ListView>
                    <Button Margin="669,347,10,10">
                        <TextBlock>Add</TextBlock>
                    </Button>
                    <Button Margin="669,308,10,49">
                        <TextBlock>View</TextBlock>
                    </Button>
                </Grid>
            </TabItem>
            
            
            
            <TabItem Header="Requests" HorizontalAlignment="Left">
                <Grid Background="LightGray">
                    <ListView Margin="10,10,122,10">

                    </ListView>
                    <Button Margin="669,347,10,10">
                        <TextBlock>View</TextBlock></Button>
                    <Button Margin="669,308,10,49">
                        <TextBlock>Reject</TextBlock>
                    </Button>
                    <Button Margin="669,269,10,88">
                        <TextBlock>Approve</TextBlock>
                    </Button>

                </Grid>
            </TabItem>
            
            
            
            <TabItem Header="Calendar" HorizontalAlignment="Left">
                <Grid Background="LightGray">
                    <Rectangle Fill="Aqua" Margin="10,10,122,10">
                        
                    </Rectangle>
                </Grid>
            </TabItem>
            
            
            
            <TabItem Header="Statistics" HorizontalAlignment="Left">
                <Grid Background="LightGray">
                    <TextBox Margin="10,10,244,342" Opacity="0.7">

                    </TextBox>
                    <Button Margin="547,10,122,342" Opacity="0.7">
                        <TextBlock>View</TextBlock>
                    </Button>
                    <ListView Margin="10,54,122,10">

                    </ListView>

                </Grid>
            </TabItem>
            
            
            
            <TabItem Header="Departments" HorizontalAlignment="Left">
                <Grid Background="LightGray">
                    <ListView Margin="10,10,122,10">

                    </ListView>
                    <Button Margin="669,347,10,10">
                        <TextBlock>Edit</TextBlock>
                    </Button>
                    <Button Margin="669,269,10,88">
                        <TextBlock>Add</TextBlock>
                    </Button>
                    <Button Margin="669,308,10,49">
                        <TextBlock>Remove</TextBlock>
                    </Button>

                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
