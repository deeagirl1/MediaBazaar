<Window x:Class="MediaBazaarApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaBazaarApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Grid>
        <TabControl>
            
            
            
            <TabItem Header="Employees">
                <Grid Background="LightGray">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Row="0" Grid.Column="0"/>
                    <Button Grid.Column="1" Content="Search"/>

                    <ListView Grid.Row="1" Grid.Column="0">
                        
                    </ListView>

                    <Grid Grid.Column="1" Grid.RowSpan="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="100*"/>
                            <RowDefinition Height="10"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="1" VerticalAlignment="Center">
                            <Button Content="Search"/>
                            <Button Content="Edit"/>
                            <Button Content="Add"/>
                            <Button Content="Remove"/>
                        </StackPanel>
                    </Grid>

                </Grid>
            </TabItem>



            <TabItem Header="Stock" >
                <Grid Background="LightGray">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>

                    <ListView Grid.Column="0">

                    </ListView>

                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="100*"/>
                            <RowDefinition Height="10"/>
                        </Grid.RowDefinitions>
                        <StackPanel  Grid.Row="1" VerticalAlignment="Center">
                            <Button Content="Add"/>
                            <Button Content="View"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>



            <TabItem Header="Requests" HorizontalAlignment="Left">
                <Grid Background="LightGray">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <ListView Grid.Column="0">
                        
                    </ListView>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="100*"/>
                            <RowDefinition Height="10"/>
                        </Grid.RowDefinitions>
                        <StackPanel VerticalAlignment="Center" Grid.Row="1">
                            <Button Content="View"/>
                            <Button Content="Reject"/>
                            <Button Content="Approve"/>
                        </StackPanel>
                        
                    </Grid>

                </Grid>
            </TabItem>



            <TabItem Header="Calendar" HorizontalAlignment="Left">
                <Grid x:Name="calendarGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Button Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" MaxWidth="120" MaxHeight="40"/>
                    <Button Grid.Row="0" Grid.Column="5" Grid.ColumnSpan="2" MaxWidth="120" MaxHeight="40"/>
                    <Border Grid.Column="7" Grid.RowSpan="6" BorderBrush="LightGray" Opacity="0.6" BorderThickness="1,0,0,0"/>


                    <!--Here are inserted all the day grids for the calendar, procedurally generated-->
                    
                    
                </Grid>
            </TabItem>



            <TabItem Header="Statistics" HorizontalAlignment="Left">
                <Grid Background="LightGray">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <ListView Grid.Row="1" Grid.ColumnSpan="2"/>

                    <TextBox Grid.Column="0"/>
                    <Button Grid.Column ="1" Content="View"/>

                </Grid>
            </TabItem>



            <TabItem Header="Departments" HorizontalAlignment="Left">
                <Grid Background="LightGray">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <ListView/>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="100*"/>
                            <RowDefinition Height="10"/>
                        </Grid.RowDefinitions>
                        <StackPanel VerticalAlignment="Center" Grid.Row="1">
                            <Button Content="Edit"/>
                            <Button Content="Add"/>
                            <Button Content="Remove"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
            
            
            
        </TabControl>
    </Grid>
</Window>
